{
  "[hbs]": {
    "editor.formatOnSave": false
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "files.associations": {
    "*.hbs": "hbs"
  },
  "triggerTaskOnSave.tasks": {
    "bundle": [
      "src/**/code.js",
      "tmp/**/code.js"
    ]
  }
}